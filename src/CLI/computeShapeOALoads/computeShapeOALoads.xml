<?xml version="1.0" encoding="utf-8"?>
<executable>
  <title>loadModels</title>
  <description>To compute shape models. </description>
  <contributor>Laura Pascal</contributor>

  <parameters>
    <label>Input parameters</label>
    <description><![CDATA[Input parameters]]></description>

    <integer>
        <name>groupnumber</name>
        <label>Group Number</label>
        <longflag>--groupnumber</longflag>
        <flag>-g</flag>
        <description><![CDATA[The number of the group]]></description>
    </integer>

    <geometry fileExtensions=".h5" multiple="false" >
        <name>modelfile</name>
        <label>Model File</label>
        <longflag>--modelfile</longflag>
        <flag>-m</flag>
        <description><![CDATA[.h5 Input file]]></description>
    </geometry>

    <geometry fileExtensions=".vtk" multiple="false" >
        <name>vtkfile</name>
        <label>VTK File</label>
        <longflag>--vtkfile</longflag>
        <flag>-v</flag>
        <description><![CDATA[.vtk Input file]]></description>
    </geometry>

    <directory>
      <name>resultdir</name>
      <label>Result Directory</label>
      <longflag>--resultdir</longflag>
      <flag>-d</flag>
      <description><![CDATA[Directory where the result will be saved]]></description>
    </directory>

  </parameters>
</executable>
